version: "2"

services:
  postgres:
    image: docker.io/library/postgres:12
    container_name: postgres
    restart: unless-stopped
    environment:
      POSTGRES_PASSWORD: 'password'
    volumes:
      - "./pg-data:/var/lib/postgresql/data:Z"
      - "./init.sql:/docker-entrypoint-initdb.d/init.sql"
    networks:
      - pdns-test
  pdns:
    image: @_pdns_image_name_@:@_pdns_version_@
    container_name: pdns
    depends_on:
      - postgres
    ports:
      # - "53:53"
      # - "53:53/udp"
      - "8081:8081"
    networks:
      - pdns-test
  pdns-admin:
    image: @_pdns_admin_image_name_@:@_pdns_admin_version_@
    container_name: pdns_admin
    depends_on:
      - pdns
      - postgres
    ports:
      - '9393:9393'
    volumes:
      - "./pdns-admin-upload:/opt/powerdns-admin/powerdns/upload"
    networks:
      - pdns-test

networks:
  pdns-test:
